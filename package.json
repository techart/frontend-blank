{
  "name": "tao-webpack",
  "version": "1.0.0",
  "description": "Webpack for TAO",
  "main": "src/index.js",
  "scripts": {
    "start": "node webpack.server.js",
    "watch": "NODE_ENV=dev webpack --progress --colors --watch",
    "build-prod": "NODE_ENV=prod webpack",
    "build-dev": "NODE_ENV=dev webpack --display-modules --display-chuncks --profile  --colors",
    "test-comparison": "casperjs test test/comparison.js --user=`whoami` || true",
    "pkg": "npm install && bower install",
    "install-tests": "sudo npm i -g fs phantomcss resemblejs casperjs phantomjs",
    "install-main": "sudo npm i -g bower webpack babel-cli",
    "lock": "npm shrinkwrap --dev && bower i --reset-shrinkwrap"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.s.intranet:core/frontend-blank.git"
  },
  "author": "web@techart.ru",
  "license": "ISC",
  "dependencies": {
    "bourbon": "^4.2.7",
    "jquery": "^2.2.1",
    "normalize-scss": "^5.0.2",
    "svg4everybody": "^2.0.3"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.4.0",
    "autoprefixer": "^6.3.5",
    "babel-core": "^6.7.2",
    "babel-eslint": "^6.0.0-beta.6",
    "babel-loader": "latest",
    "babel-preset-es2015": "^6.6.0",
    "bower": "^1.7.7",
    "bower-shrinkwrap-resolver": "^0.4.1",
    "bower-webpack-plugin": "^0.1.9",
    "clean-webpack-plugin": "^0.1.8",
    "component-css": "0.0.8",
    "component-css-loader": "^0.1.0",
    "component-resolver-webpack": "^0.4.0",
    "css-loader": "^0.23.1",
    "doiuse": "git+ssh://git@gitlab.s.intranet:frontend/doiuse.git",
    "eslint": "^2.4.0",
    "eslint-loader": "^1.3.0",
    "expose-loader": "^0.7.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.3",
    "image-webpack-loader": "^1.8.0",
    "imports-loader": "^0.6.5",
    "less": "^2.6.1",
    "less-loader": "^2.2.2",
    "node-sass": "^3.4.2",
